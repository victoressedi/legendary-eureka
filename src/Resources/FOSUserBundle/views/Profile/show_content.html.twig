<div class="card">
    <div class="fos_user_user_show">
        <ul style="list-style-type: square">
            <li style="margin-bottom: 1rem">
                {{ 'id'|trans }}:
                <ul style="list-style-type:none">
                    <li>
                        {{ user.id }}
                    </li>
                </ul>
            </li>
            <li style="margin-bottom: 1rem">
                {{ 'username'|trans }}:
                <ul style="list-style-type:none">
                    <li>
                        {{ user.username }}
                    </li>
                </ul>
            </li>
            <li style="margin-bottom: 1rem">
                {{ 'email'|trans }}:
                <ul style="list-style-type:none">
                    <li>
                        {{ user.email }}
                    </li>
                </ul>
            </li>
            <li style="margin-bottom: 1rem">
                {{ 'name'|trans }}:
                <ul style="list-style-type:none">
                    <li>
                        {{ user.name }}
                    </li>
                </ul>
            </li>
            <li style="margin-bottom: 1rem">
                {{ 'surnames'|trans }}:
                <ul style="list-style-type:none">
                    <li>
                        {{ user.surnames }}
                    </li>
                </ul>
            </li>
        </ul>
        <a class="btn" href="{{env("BASE_URL")}}/profile/edit">{{"actions.edit" | trans}}</a>
        <a class="btn" href="{{env("BASE_URL")}}/logout">{{"actions.exit" | trans}}</a>

    </div>
</div>